<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="BonetCalendarTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BonetCalendarTheme.Buttons" />

    <style name="BonetCalendarTheme.Buttons.Prev" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_previous_background</item>
        <item name="android:height">@dimen/bt_button_prev_height</item>
        <item name="android:width">@dimen/bt_button_prev_width</item>
    </style>
    
    <style name="BonetCalendarTheme.Buttons.Next" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_next_background</item>
        <item name="android:height">@dimen/bt_button_next_height</item>
        <item name="android:width">@dimen/bt_button_next_width</item>
    </style>

    <style name="BonetCalendarTheme.Text" parent="@android:style/TextAppearance" />

    <style name="BonetCalendarTheme.Text.Headline" parent="@style/BonetCalendarTheme.Text">
        <item name="android:textSize">@dimen/bt_headline_textsize</item>
    </style>
    
</resources>
